<h1>Listing folders</h1>

<% @current_todouser.folders.each do |folder| %>
 <div class="row">
    <div class="span3">
      <%= folder.name %>
    </div>
    <div class="span3">
      <%= link_to 'Folder Tasks', [@current_todouser,folder], class: "btn btn-default" %>
    </div>
    <div class="span3">
      <%= link_to 'Edit Folder', edit_todouser_folder_path(@current_todouser,folder), class: "btn btn-default" %>
    </div>
    <div class="span3">
      <%= link_to 'Delete Folder', [@current_todouser,folder], method: :delete, data: { confirm: 'Are you sure?' , remote: true}, class: "link-folder btn btn-danger" %>
    </div>
 </div>
<% end %>

<br />
<div class="btn-group">
<%= link_to 'New Folder', new_todouser_folder_path, class: "btn btn-default" %>
</div>