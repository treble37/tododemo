<p id="notice"><%= notice %></p>
<h1>Folder Tasks</h1>

<div class="row">
  <div class="span3">Description</div>
  <div class="span3">Due Date</div>
  <div class="span3">Edit</div>
  <div class="span3">Complete</div>
</div>

<% @folder.tasks.each do |ft| %>
  <div class="row">
    <div class="span3"><%= ft.description %></div>
    <div class="span3"><%= ft.duedate %></div>
    <div class="span3"><%= link_to "Edit Task", edit_todouser_folder_task_path(@current_todouser,@folder,ft), class: "btn btn-default" %></div>
    <div class="span3"><%= link_to 'Delete Task', [@current_todouser,@folder,ft], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></div>
  </div>
    
<% end %>

<div class="btn-group">
<%= link_to "New Task", new_todouser_folder_task_path(@current_todouser,@folder), class: "btn btn-default" %> |
<%= link_to 'Edit', edit_todouser_folder_path(@current_todouser,@folder), class: "btn btn-default" %> |
<%= link_to 'Back', todouser_folders_path, class: "btn btn-default" %>
</div>
